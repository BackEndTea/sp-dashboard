{% form_theme form 'form/fields.html.twig' %}

{% extends '::base.html.twig' %}

{% block body_container %}
    <h1>{% block page_heading %}{{ 'service.edit.title'|trans }}{%endblock%}</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="fieldset card">

        {% for message in app.flashes('error') %}
            <div class="message error">
                {{ message|trans }}
            </div>
        {% endfor %}

        <h2>{{ 'service.edit.info.title'|trans }}</h2>
        <div class="wysiwyg">{{ 'service.edit.info.html'|trans|raw }}</div>
    </div>

    <div class="fieldset card">
        <h2>{{ 'service.edit.general.title'|trans }}</h2>
        <div class="wysiwyg">{{ 'service.edit.general.html'|trans|raw }}</div>
        {{ form_widget(form.general) }}
    </div>

    <div class="fieldset card">
        <h2>{{ 'service.edit.metadata.title'|trans }}</h2>
        <div class="wysiwyg">{{ 'service.edit.metadata.html'|trans|raw }}</div>
        {{ form_widget(form.metadata) }}
    </div>

    <div class="fieldset card contact">
        <h2>{{ 'service.edit.contact_information.title'|trans }}</h2>
        <div class="wysiwyg">{{ 'service.edit.contact_information.html'|trans|raw }}</div>
        {{ form_widget(form.contactInformation) }}
    </div>

    <div class="fieldset card">
        <h2>{{ 'service.edit.attributes.title'|trans }}</h2>
        <div class="wysiwyg">{{ 'service.edit.attributes.html'|trans|raw }}</div>
        {{ form_widget(form.attributes) }}
    </div>

    <div class="fieldset card">
        <h2>{{ 'service.edit.comments.title'|trans }}</h2>
        <div class="wysiwyg">{{ 'service.edit.comments.html'|trans|raw }}</div>
        {{ form_widget(form.comments) }}
    </div>

    <div class="button-wrapper">
        {{ form_end(form) }}
    </div>

{% endblock %}
