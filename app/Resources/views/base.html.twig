<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Service Provider Dashboard | SURFconext{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/global.css') }}">
        {% endblock %}
    </head>
    <body>
        <div class="flash hide undefined">
            <div class="message-container">
                <p></p>
                <a class="close"><i class="fa fa-remove"></i></a>
            </div>
        </div>
        <div class="header-container">
            <div class="header">
                <a class="logo" href="/">
                    <img src="/images/surfconext-logo.png" alt="SURFconext" />
                </a>
                <ul class="links">
                    <li class="title">
                        <span>SP Dashboard</span>
                    </li>
                    <li class="profile" tabindex="1">
                        <a class="welcome-link">
                            <i class="fa fa-user-circle-o"></i>
                            John Doe
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </li>
                    <li>
                        <a href="https://wiki.surfnet.nl/" target="_blank">{{ 'page.header.help'|trans }}</a>
                    </li>
                    <li class="border-left"><a>{{ 'page.header.logout'|trans }}</a></li>
                    <li class="admin-switcher">
                        {{ admin_switcher() }}
                    </li>
                </ul>
            </div>
        </div>
        <div class="navigation-container">
            <div class="navigation">
                {{ knp_menu_render('DashboardBundle:Builder:mainMenu') }}
            </div>
        </div>
        <div class="page-container">
            <div class="icon-legend">
                <section class="roles">
                    <span class="role">
                        <i class="fa fa-star"></i>Admin
                    </span>
                </section>
            </div>
            {% block body_container %}
            <div class="card">
                {% block body %}{% endblock %}
            </div>
            {% endblock %}
        </div>
        <div class="footer">
            <div class="footer-inner">
                <span><a href="/" target="_blank">{{ 'page.header.privacy'|trans }}</a></span>
                <span><a href="/" target="_blank">{{ 'page.header.contact'|trans }}</a></span>
            </div>
        </div>
        {% block javascripts %}
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
