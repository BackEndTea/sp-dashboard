<?xml version="1.0" encoding="UTF-8"?>
<project name="SURFnet Service Provider Dashboard" default="test">
    <target name="test" depends="lint,static-analysis,unit-tests,integration-tests" />

    <target name="lint">
        <exec executable="vendor/bin/parallel-lint">
            <arg path="app" />
            <arg path="src" />
            <arg path="tests" />
            <arg path="web" />
        </exec>

        <exec executable="bin/console">
            <arg line="lint:twig" />
            <arg path="app/Resources" />
        </exec>

        <exec executable="bin/console">
            <arg line="lint:yaml" />
            <arg path="app/config" />
        </exec>

        <exec executable="composer">
            <arg line="validate" />
        </exec>
    </target>

    <target name="static-analysis">
        <exec executable="vendor/bin/phpmd">
            <arg path="src" />
            <arg value="text" />
            <arg path="phpmd.xml" />
        </exec>

        <exec executable="vendor/bin/phpcs">
            <arg line="--runtime-set ignore_warnings_on_exit 1" />
            <arg line="--standard=phpcs.xml" />
            <arg path="src" />
            <arg path="tests" />
        </exec>

        <exec executable="vendor/bin/phpcpd" failonerror="false">
            <arg path="src" />
        </exec>
    </target>

    <target name="unit-tests">
        <exec executable="vendor/bin/phpunit">
            <arg line="--testsuite unit" />
        </exec>
    </target>

    <target name="integration-tests">
        <exec executable="vendor/bin/phpunit">
            <arg line="--testsuite integration" />
        </exec>
    </target>
</project>
